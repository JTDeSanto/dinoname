<div class=" row">
  <div class="col-md-5 offset-md-1 col-sm-12 col dino">
 
  </div>
  <br />
  <br />
  <div class="col-md-5  col-sm-12 ">
    <div class="container title">
      <h4 class="main">What is Your</h4>
      <h1 class="main dino-name">Dinosaur Name?</h1>
    </div>
    

    <div class="container">
      
      <%= simple_form_for Dinoname.new, method: :get do |f| %>
        <%= f.input :name, placeholder:"Enter your first name"  %>
        <br />
        <%= f.submit 'Submit', class: 'btn btn-danger' %>
      <% end %>
      <br />
      <br />
    </div>
  </div>

  
</div>
<br />
<br />

<div class="col-8 offset-2 col-sm-8 offset-sm-2 col-xs-10 container text-center">
  <h1 class="main"> ++ Top Dino-Names ++</h1> 
  <div class="row ">
  
  
    <table class="table table-dark  table-hover">
      <thead ><th>Rank</th><th>Name</th><th>Diet</th><th>Vote</th><th>Count</th></thead>
      <tbody>
        
      <% @dinos.order(:cached_votes_up => :desc).each do |d| %>
      
        <tr class="top-dinos text-center">
          <td></td><td><h4><%= d.name %></h4></td> <td><h5><%= d.diet %></h5></td> <td>

            <%= link_to like_dino_path(d), method: :put do %><i class="fa fa-thumbs-up"></i></td><td><%= d.get_upvotes.size %>
<% end %></td>
          </tr>

        <% end %>
         
        </tbody>
    </table>
  
</div>
